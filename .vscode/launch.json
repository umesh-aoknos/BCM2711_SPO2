{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "duration",
            "type": "promptString",
            "description": "Duration (seconds) to pass to build task",
            "default": "2"
        },
        {
            "id": "redLEDCurrent",
            "type": "promptString",
            "description": "Red LED Current (mA) to pass to build task",
            "default": "25"
        },
        {
            "id": "irLEDCurrent",
            "type": "promptString",
            "description": "IR LED Current (mA) to pass to build task",
            "default": "25"
        },

        {
            "id": "sampleRate",
            "type": "promptString",
            "description": "LED Sample Rate (SPS) to pass to build task",
            "default": "50"
        },
        {
            "id": "i2cFreq",
            "type": "promptString",
            "description": "I2C Frequency (kHz) to pass to build task",
            "default": "100"
        }
    ],
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ads1256dac8532",
            "preLaunchTask": "build",
            "args": ["${input:duration}", "${input:redLEDCurrent}", "${input:irLEDCurrent}", "${input:sampleRate}", "${input:i2cFreq}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}